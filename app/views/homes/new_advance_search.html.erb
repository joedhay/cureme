<%= form_for @product, url: submit_advanced_search_homes_path(@product) do |f| %>

<div class="page-header">
  <h1>Advance <small>Search</small></h1>
</div>
<div class="form-group">
  <%= f.label :category_id %><br>
  <%= f.select :category_id, @categories.collect { |c| [c.name, c.id] }, {prompt: 'Select'}, { :class => 'form-control'}  %>
</div>
<div class="form-group">
  <%= f.label :item_name %><br>
  <%= f.text_field :item_name, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :price %><br>
  <%= f.number_field :price, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :description %><br>
  <%= f.text_field :description, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :groups %><br>
  <%= f.text_field :groups, :class => 'form-control' %>
</div>
<div class="actions">
  <%= f.submit 'Search', :class => 'btn btn-primary'%>
  <%= link_to 'Back', homes_path, :class => 'btn btn-danger' %>
</div>
<% end %>
