<div class="comment_lists">
  <div class="form-group has-feedback">
    <% if flash[:error] %>
      <div class="alert alert-danger open-sans-regular" id="users_error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= @error_alert %>
        <div class="notice" style="font-size: 14px;"><%= flash[:error] %></div>
        <% flash[:error]=nil   %>
      </div>
    <% end %>
    <%- if !flash[:notice].nil? %>
      <div class="alert alert-success open-sans-regular" id="users_error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <div class="notice" style="font-size: 14px;"><%= flash[:notice] %></div>
        <% flash[:notice]=nil %>
      </div>
    <%- end %>
  </div>

  <div class="table-responsive">
    <div id="toolbar">

    </div>
    <br/>
    <table  class="table table-striped table-bordered"
            data-toggle="table"
            data-toolbar="#toolbar"
            data-search="true"
            data-show-export="true"
            data-minimum-count-columns="2"
            data-pagination="true"
            data-page-list="[10, 25, 50, 100, ALL]">
      <thead>
      <% if @products.present? %>
        <tr>
          <th>Product Name</th>
          <th>Action</th>
        </tr>
      <% end %>
      </thead>
      <tbody>
      <% if @products.present? %>
        <% @products.each do |product| %>
          <tr>
            <td><a href="<%= edit_product_path(product) %>" ><%= product.item_name %></a></td>
            <td>

              <a href="<%= sent_messages_messages_path(:id =>product.id) %>" class="edit_link" data-original-title="Edit">
                <button class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Process offer">
                  Sent Messages
                  <% if (return_comment_count product.id).present? %>
                    <!--<span class="badge message_count"> <%#= (return_comment_count product.id) %>  </span>-->
                  <% end %>

                </button>
              </a>



            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td>No products available.</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


