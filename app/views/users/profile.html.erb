
<div class="container">
  <%= form_for(@user) do |f| %>
      <%= hidden_field_tag 'action_page', 'register' %>
      <div class="form-group has-feedback">
        <%- if  @user.present?  %>
            <% if @user.errors.present? %>
                <div class="alert alert-danger open-sans-regular" id="users_error">
                  <button type="button" class="close" data-dismiss="alert">&times;</button>
                  <h2>Errors</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
        <% end %>
        <% if flash[:error] %>
            <div class="alert alert-danger open-sans-regular" id="users_error">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= @error_alert %>
              <div class="notice" style="font-size: 14px;"><%= flash[:error] %></div>
              <% flash[:error]=nil   %>
            </div>
        <% end %>
        <%- if !flash[:notice].nil? %>
            <div class="alert alert-success open-sans-regular" id="users_error">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <div class="notice" style="font-size: 14px;"><%= flash[:notice] %></div>
              <% flash[:notice]=nil %>
            </div>
        <%- end %>
      </div>


      <div class="form-group required">
        <%= f.label :first_name %>
        <%= f.text_field :first_name,:class=>'form-control', :placeholder =>'First name'%>
      </div>

      <div class="form-group required">
        <%= f.label :last_name %>
        <%= f.text_field :last_name,:class=>'form-control', :placeholder =>'Last name' %>
      </div>

      <div class="form-group required">
        <%= f.label :address %>
        <%= f.text_field :address,:class=>'form-control', :placeholder =>'Address' %>
      </div>

      <div style='width: 800px;' class="map">
        <div class="btn-group">
          <!--<a href="#!" class="btn btn-primary close_map">
            Close Map
          </a>-->
        </div>
        <div id="map" style='width: 100%; height: 700px;'></div>
      </div>


      <div class="form-group required">
        <%= f.label :email %>
        <%= f.text_field :email,:class=>'form-control', :placeholder =>'Email' %>
      </div>

      <div class="form-group required">
        <%= f.label :username %>
        <%= f.text_field :username,:class=>'form-control', :placeholder =>'username' %>
      </div>

      <div class="form-group required">
        <%= f.label :alias %>
        <%= f.text_field :alias,:class=>'form-control', :placeholder =>'alias' %>
      </div>


      <div class="form-group required">
        <%= f.label :password %>
        <%= f.password_field :password,:class=>'form-control', :placeholder =>'Password' %>
      </div>

      <div class="form-group required">
        <%= f.label :confirmed_password %>
        <%= f.password_field :confirmed_password,:class=>'form-control', :placeholder =>'Confirm Password' %>
      </div>


      <div class="form-group">
        <%= f.label :gender  %><br>
        <%= f.select(:gender, options_for_select([ 'Male','Female' ], 'Male'),{},{ :class => 'form-control'}) %>
      </div>

      <div class="form-group">
        <%= f.label :avatar  %><br>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.label :date_of_birth  %><br>

        <div class="form-inline">
          <%= f.select(:date_of_birth, options_for_select(@months, 1),{},{ :class => 'form-control'}) %>
          <div class="form-group ">
            <div class="col-lg-12">
              <label class="sr-only" for="city">Day</label>
              <input type="text" id="day" name="day" class="form-control " placeholder="Day" >
            </div>
          </div>
          <div class="form-group ">
            <div class="col-lg-12">
              <label class="sr-only" for="county">Year</label>
              <input type="text" id="year" name="year" class="form-control " placeholder="Year" >
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number  %><br>
        <%= f.text_field :phone_number,:class=>'form-control', :placeholder =>'+66' %>
      </div>

      <%= f.fields_for :role do |role| %>
          <div class="form-group">
            <%= role.label 'Role' %><br>
            <%= role.select(:name, options_for_select([ 'Admin','User','Guest' ],@user.role.name),{},{ :class => 'form-control'}) %>
          </div>
      <% end %>


      <div class="actions">
        <%= f.submit 'Save User', :class => 'btn btn-primary'%>
        <div class="btn-group">
          <a href="<%= products_path %>" class="btn btn-default ">
            Cancel
          </a>
        </div>
      </div>
  <% end %>
</div>

