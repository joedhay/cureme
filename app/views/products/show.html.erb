

<div class="row">
  <div class="col-lg-7">

    <div class="row">
      <div class="col-lg-12">
        <div id="products" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#products" data-slide-to="0" class="active"></li>
            <li data-target="#products" data-slide-to="1"></li>
            <li data-target="#products" data-slide-to="2"></li>
            <li data-target="#products" data-slide-to="3"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <%= image_tag @product.item1.url(:large) %>
            </div>

            <div class="item">
              <%= image_tag @product.item2.url(:large) %>
            </div>

            <div class="item">
              <%= image_tag @product.item3.url(:large) %>
            </div>

            <div class="item">
              <%= image_tag @product.item4.url(:large) %>
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
    </div>
