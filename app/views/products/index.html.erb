<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<div id="toolbar">
  <%= link_to 'New Product', new_product_path, :class => "btn btn-primary" %>
</div>

<table class="table table-striped table-bordered"
       data-toggle="table"
       data-toolbar="#toolbar"
       data-search="true"
       data-show-columns="true"
       data-pagination="true"
       data-page-list="[10, 25, 50, 100, ALL]">
  <thead>
    <tr>
      <th data-sortable="true">Category</th>
      <th data-sortable="true">Item name</th>
      <th data-sortable="true">Price</th>
      <th data-sortable="true">Description</th>
      <th data-sortable="true">Groups</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category_id %></td>
        <td><%= product.item_name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.groups %></td>
        <td><%= link_to 'Show', product, :class => 'btn btn-info' %>&nbsp;<%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-warning' %>&nbsp;<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>


