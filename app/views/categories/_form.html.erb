<%= form_for(@category) do |f| %>

    <div class="form-group has-feedback">
      <%- if  @category.present?  %>
          <% if @category.errors.present? %>
              <div class="alert alert-danger open-sans-regular" id="object_cats_error">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h2>Errors</h2>
                <ul>
                  <% @category.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
      <% end %>
      <% if flash[:error] %>
          <div class="alert alert-danger open-sans-regular" id="object_cats_error">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= @error_alert %>
            <div class="notice" style="font-size: 14px;"><%= flash[:error] %></div>
            <% flash[:error]=nil   %>
          </div>
      <% end %>
      <%- if !flash[:notice].nil? %>
          <div class="alert alert-success open-sans-regular" id="object_cats_error">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <div class="notice" style="font-size: 14px;"><%= flash[:notice] %></div>
            <% flash[:notice]=nil %>
          </div>
      <%- end %>
    </div>

    <div class="form-group required">
      <%= f.label :name  %>
      <%= f.text_field :name,:class=>'form-control', :placeholder =>'Name' %>
    </div>

    <div class="form-group required">
      <%= f.label :description  %>
      <%= f.text_area :description,:rows => 5, :cols => 15,:class=>'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit 'Save Category', :class => 'btn btn-default btn-gray'%>
      <div class="btn-group">
        <a href="<%= categories_path %>" class="btn btn-default ">
          Cancel
        </a>
      </div>
    </div>
<% end %>

<script>
    clearInterval(interval);
</script>